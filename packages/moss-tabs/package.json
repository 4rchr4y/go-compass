{
  "name": "@repo/moss-tabs",
  "version": "0.0.0",
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./styles/dockview.css": "./styles/dockview.css"
  },
  "description": "Zero dependency layout manager supporting tabs, grids and splitviews",
  "keywords": [
    "splitview",
    "split-view",
    "gridview",
    "grid-view",
    "dockview",
    "dock-view",
    "grid",
    "tabs",
    "layout",
    "layout manager",
    "dock layout",
    "dock",
    "docking",
    "splitter",
    "drag-and-drop",
    "drag",
    "drop",
    "react",
    "react-component"
  ],
  "homepage": "https://github.com/mathuo/dockview",
  "bugs": {
    "url": "https://github.com/mathuo/dockview/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mathuo/dockview.git"
  },
  "license": "MIT",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/cjs/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "npm run build:package && npm run build:bundles",
    "build:bundles": "rollup -c",
    "build:cjs": "cross-env ../../node_modules/.bin/tsc --build ./tsconfig.json --verbose --extendedDiagnostics",
    "build:css": "gulp sass",
    "build:css-old": "node scripts/copy-css.js",
    "build:esm": "cross-env ../../node_modules/.bin/tsc --build ./tsconfig.esm.json --verbose --extendedDiagnostics",
    "build:package": "npm run build:cjs && npm run build:esm && npm run build:css",
    "clean": "rimraf dist/ .build/ .rollup.cache/",
    "prepublishOnly": "npm run rebuild && npm run test",
    "rebuild": "npm run clean && npm run build",
    "test": "cross-env ../../node_modules/.bin/jest --selectProjects moss-tabs",
    "test:cov": "cross-env ../../node_modules/.bin/jest --selectProjects moss-tabs --coverage"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@repo/tailwind-config": "workspace:*",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.1",
    "@tailwindcss/typography": "^0.5.15"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.1.0",
    "@total-typescript/shoehorn": "^0.1.2",
    "cross-env": "^7.0.3",
    "ts-jest": "^29.2.5"
  }
}
