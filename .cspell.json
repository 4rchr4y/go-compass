    {
      "name": "frontend",
      "path": "./misc/cspell/frontend.txt"
    }
  ],
  "dictionaries": ["backend", "frontend", "typescript", "react", "lorem-ipsum"],
  "ignorePaths": ["pnpm-lock.yaml", "Makefile", "target", "view/desktop/rocksdb"]
}
