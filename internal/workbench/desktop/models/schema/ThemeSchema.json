{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "ThemeSchema",
  "$defs": {
    "Theme": {
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "$id": "Theme.json",
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "slug": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "isDefault": {
          "type": "boolean"
        },
        "colors": {
          "$ref": "Colors.json"
        }
      },
      "required": ["name", "slug", "type", "isDefault", "colors"]
    },
    "Colors": {
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "$id": "Colors.json",
      "type": "object",
      "properties": {
        "primary": {
          "$ref": "ColorType.json"
        }
      },
      "required": ["primary"]
    },
    "ColorType": {
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "$id": "ColorType.json",
      "anyOf": [
        {
          "type": "object",
          "properties": {
            "$type": {
              "type": "string",
              "const": "solid"
            },
            "$value": {
              "type": "string"
            }
          },
          "required": ["$type", "$value"]
        },
        {
          "type": "object",
          "properties": {
            "$type": {
              "type": "string",
              "const": "gradient"
            },
            "$value": {
              "$ref": "ColorGradient.json"
            }
          },
          "required": ["$type", "$value"]
        }
      ]
    },
    "ColorGradient": {
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "$id": "ColorGradient.json",
      "type": "object",
      "properties": {
        "angle": {
          "type": "integer"
        },
        "stops": {
          "$ref": "ColorGradientStop.json"
        }
      },
      "required": ["angle", "stops"]
    },
    "ColorGradientStop": {
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "$id": "ColorGradientStop.json",
      "type": "object",
      "properties": {
        "color": {
          "type": "string"
        },
        "position": {
          "type": "number"
        }
      },
      "required": ["color", "position"]
    }
  }
}
