{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "ColorType.json",
  "anyOf": [
    {
      "type": "object",
      "properties": {
        "$type": {
          "type": "string",
          "const": "solid"
        },
        "$value": {
          "type": "string"
        }
      },
      "required": ["$type", "$value"]
    },
    {
      "type": "object",
      "properties": {
        "$type": {
          "type": "string",
          "const": "gradient"
        },
        "$value": {
          "$ref": "ColorGradient.json"
        }
      },
      "required": ["$type", "$value"]
    }
  ]
}
